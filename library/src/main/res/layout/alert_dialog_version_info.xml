<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgAppIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:maxHeight="8dp"
        android:maxWidth="8dp"
        android:minHeight="8dp"
        android:minWidth="8dp"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_launcher_round" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAppName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/imgAppIcon"
        android:layout_toEndOf="@id/imgAppIcon"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        tools:text="App Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAppVersionName"
        android:layout_below="@+id/txtAppName"
        android:layout_toRightOf="@+id/imgAppIcon"
        android:layout_toEndOf="@+id/imgAppIcon"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6D6D6D"
        android:textSize="14sp"
        tools:text="Version Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAppCopyright"
        android:layout_below="@+id/txtAppVersionName"
        android:layout_toRightOf="@+id/imgAppIcon"
        android:layout_toEndOf="@+id/imgAppIcon"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#252525"
        android:textSize="12sp"
        tools:text="&#169; Copyright" />

</RelativeLayout>